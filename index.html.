<div class="container">
    <h1>Регистрация в облаке</h1>
    
    <div class="student-info">
        <p><strong>Студент:</strong> Ваше Имя (Заполните тут)</p>
        <p><strong>Проект:</strong> procj-1c340</p>
    </div>

    <input type="text" id="nameInput" placeholder="Введите ваше имя">
    <input type="email" id="emailInput" placeholder="Введите ваш Email">
    <button id="sendBtn">Отправить данные</button>

    <p id="statusMessage"></p>
</div>

<script type="module">
    // 1. Импорт функций Firebase через CDN (для работы в браузере без установки Node.js)
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
    import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

    const firebaseConfig = {
        apiKey: "AIzaSyDGp3HhpUBFdVpsp2APcQr-uu6suZSQa6k",
        authDomain: "procj-1c340.firebaseapp.com",
        projectId: "procj-1c340",
        storageBucket: "procj-1c340.firebasestorage.app",
        messagingSenderId: "213350806342",
        appId: "1:213350806342:web:53d355b493918489ddab47"
    };

    // 3. Инициализация приложения
    const app = initializeApp(firebaseConfig);
    // Инициализация базы данных
    const db = getFirestore(app);

    // 4. Логика работы кнопки
    const sendBtn = document.getElementById('sendBtn');
    const statusMsg = document.getElementById('statusMessage');

    sendBtn.addEventListener('click', async () => {
        const name = document.getElementById('nameInput').value;
        const email = document.getElementById('emailInput').value;

        // Простая проверка, что поля не пустые
        if (name.trim() === "" || email.trim() === "") {
            alert("Пожалуйста, заполните все поля!");
            return;
        }

        sendBtn.disabled = true; // Блокируем кнопку, чтобы не нажали дважды
        sendBtn.innerText = "Отправка...";

        try {
            // ПОПЫТКА ЗАПИСИ В БАЗУ ДАННЫХ
            // Создаем документ в коллекции "requests"
            const docRef = await addDoc(collection(db, "requests"), {
                userName: name,
                userEmail: email,
                timestamp: new Date().toISOString() // Добавляем время отправки
            });

            // Если успех:
            console.log("Document written with ID: ", docRef.id);
            statusMsg.innerText = "Успешно! Данные сохранены в Firestore.";
            statusMsg.className = "success";
            statusMsg.style.display = "block";
            
            // Очищаем поля
            document.getElementById('nameInput').value = "";
            document.getElementById('emailInput').value = "";

        } catch (e) {
            // Если ошибка:
            console.error("Error adding document: ", e);
            statusMsg.innerText = "Ошибка: " + e.message;
            statusMsg.className = "error";
            statusMsg.style.display = "block";
            
            // Частая ошибка: Если вы видите "Missing or insufficient permissions",
            // значит вы не включили "Test Mode" в настройках базы данных Firebase.
        } finally {
            sendBtn.disabled = false;
            sendBtn.innerText = "Отправить данные";
        }
    });
</script>

